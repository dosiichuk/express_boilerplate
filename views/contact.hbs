<h2>Contact me</h2>
<form method='POST' action='/contact/send-message' enctype='multipart/form-data'>
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
      Project design: <input type="file" name="design" required>
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
  {{#if isError}}
      <div class='isError'>Can't leave cells empty</div>
  {{/if}}
  {{#if isSent}}
      <div class='isSent'>The message has been sent. The file {{fileName}} has been sent.</div>
      <img src='/{{fileName}}' alt={{fileName}} />
  {{/if}}

</form>